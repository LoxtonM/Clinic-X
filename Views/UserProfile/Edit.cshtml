@model ClinicX.ViewModels.ProfileVM

@{
}

<div class="container">
    <div class="row mb-5 g-5">
        <h1 class="text-center">Change Password for @Model.staffMember.EMPLOYEE_NUMBER (@Model.staffMember.NAME)</h1>
    </div>

    <form id="frmChangePassword" asp-action="Edit">
        <div class="row mb-2 g-2">
            <div class="col-md-2">
                <label>Current password:</label>
            </div>
            <div class="col-md-8">
                <input type="password" id="txtCurPassword" name="curPassword" />
            </div>
        </div>

        <div class="row mb-2 g-2">
            <div class="col-md-2">
                <label>New password:</label>
            </div>
            <div class="col-md-8">
                <input type="password" id="txtNewPassword" name="newPassword" />
            </div>
        </div>

        <div class="row mb-2 g-2">
            <div class="col-md-2">
                <label>Confirm password:</label>
            </div>
            <div class="col-md-8">
                <input type="password" id="txtNewPasswordConf" name="newPasswordConf" />
            </div>
        </div>

    

        <div class="row mb-5 g-5">
            <div class="col-md-10"></div>
            <div class="col-md-2">
                <button type="button" class="btn btn-success" id="btnSavePassword">Save</button>
            </div>
        </div>
    </form>

</div>

<script>
    document.getElementById("btnSavePassword").addEventListener("click", UpdatePassword);

    function UpdatePassword()
    {
        var curPW = document.getElementById("txtCurPassword").value;
        var newPW = document.getElementById("txtNewPassword").value;
        var newPWConf = document.getElementById("txtNewPasswordConf").value;              

        if ("@Model.staffMember.PASSWORD" != curPW)
        {
            window.alert("Your current password does not match.");
        }
        else
        {
            if (newPW != newPWConf)
            {
                window.alert("The passwords you have entered do not match.");
            }
            else
            {
                document.getElementById("frmChangePassword").submit();
            }
        }
    }
</script>
