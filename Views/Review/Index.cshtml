@model ClinicX.ViewModels.ReviewVM

@{
    ViewData["Title"] = "ClinicX - Reviews";
    ViewData["Page"] = "/ Review";
    ViewData["HomeBtn"] = Html.ActionLink("Home Page", "Index", "Home", new { }, new { @class = "btn btn-success m-1" });
}


<div class="container card">
    <div class="row mb-5 g-2 mt-2">
        <h2>Outstanding Reviews</h2>
    </div>

    <div class="d-grid">
        <table class="table" id="myTable">
            <thead>
                <tr>
                    <th></th>
                    <th>CGU No</th>
                    <th>Patient</th>
                    <th>Category</th>
                    <th>@Html.DisplayNameFor(model => model.review.Planned_Date)</th>                
                    <th>Owner/Requester</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.reviewList)
                {
                    <tr>
                        <td><a asp-action="Edit" asp-route-id=@item.ReviewID class="btn btn-success">Select</a></td>
                        <td>@item.CGU_No</td>
                        <td>@item.FIRSTNAME @item.LASTNAME</td>
                        <td>@item.Category</td>
                        @if (@item.Planned_Date != null)
                        {
                            <td><span hidden>@item.Planned_Date.Value.ToString("yyyyMMdd")</span>@item.Planned_Date.Value.ToString("dd/MM/yyyy")</td>
                        }
                        else
                        {
                            <td>N/A</td>
                        }
                        <td>@item.Owner</td>
                    </tr>                
                }
            </tbody>
        </table>
    </div>
    
</div>

<script>

    window.addEventListener("load", LoadTable)
    function LoadTable()
    {

        let table = new DataTable('#myTable',
        {
            "order": [] //disable initial sorting and allow the data sorting in the back-end
        });
    }

</script>