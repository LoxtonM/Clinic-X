@model ClinicX.ViewModels.RiskSurveillanceVM

<div class="container">
    <div class="row mb-5 g-2 mt-2">
        <div class="col-md-2">
            @*<input type="button" value="Back" id="btnBack" class="btn btn-default btn-success" />*@
            <a type="button" class="btn btn-default btn-success" asp-controller="RiskAndSurveillance" asp-action="RiskDetails" asp-route-id=@Model.surveillanceDetails.RiskID>Back to Risk Details</a>
        </div>
        <div class="col-md-2">
            <a class="btn btn-default btn-success" asp-controller="Patient" asp-action="PatientDetails" asp-route-id=@Html.ValueFor(model => model.surveillanceDetails.MPI)>Patient Details</a>
        </div>
    </div>
    <hr />
    
    <h1>Surveillance Details for @Model.patient.FIRSTNAME @Model.patient.LASTNAME</h1>

    <div class="d-grid">
        <dl class="row">        
            <dt class="col-sm-2">
                Frequency:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.surveillanceDetails.SurvFreq)
            </dd>
            <dt class="col-sm-2">
                Site:
            </dt>
            <dd class="col-sm-2">
               @Html.DisplayFor(model => model.surveillanceDetails.SurvSite)
            </dd>
            <dd class="col-sm-8"></dd>
            <dt class="col-sm-1">
                From Age:
            </dt>
            <dd class="col-sm-1">
                @Html.DisplayFor(model => model.surveillanceDetails.SurvStartAge)
            </dd>
            <dt class="col-sm-1">
                to:
            </dt>
            <dd class="col-sm-1">
                @Html.DisplayFor(model => model.surveillanceDetails.SurvStopAge)
            </dd>
            <dd class="col-sm-8"></dd>
            @if (Model.surveillanceDetails.SurvRecHoCode != null)
            {
                <dt class="col-sm-2">
                    Hospital:
                </dt>
                <dd class="col-sm-2">
                    @Html.DisplayFor(model => model.surveillanceDetails.SurvRecHoCode)
            </dd>
            }
        </dl>

        <form asp-action="SurvDetails">
            <div class="row mb-2 g-2" hidden ="true">
                <input type="text" name="survID" asp-for=@Model.surveillanceDetails.SurvRecID />
            </div>
            <div class="row mb-2 g-2">
                <div class="col-md-2">
                    <label>Select Gene Change</label>
                </div>
                <div class="col-md-2">
                    <select class="w-100" name="geneChange" asp-for=@Model.surveillanceDetails.GeneChangeID>
                        <option selected value = "">Select...</option>
                        @foreach(var item in Model.GeneChange)
                        {
                            <option value=@item.GeneChangeID>@item.GeneChangeDescription</option>
                        }
                    </select>
                </div>
            </div>

            <div class="row mb-2 g-2">
                <div class="col-md-2">
                    <button type="submit" class="btn btn-success">Save</button>
                </div>
            </div>
        </form>
    </div>

</div>

<script>
    document.getElementById("btnBack").addEventListener("click", GoBack);

        function GoBack()
        {
            window.history.back();
            //window.close();
        }
</script>