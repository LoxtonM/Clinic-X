@model ClinicX.ViewModels.LabReportVM

<div class="container">
    
    <h1>Report details for @Model.dnaReportDetails.LABNO</h1>
    

    <div class="row mb-5 g-5">
        <div class="col-md-1">
            <label>Summary:</label>
        </div>
        <div class="col-md-10">
            <p>@Model.dnaReportDetails.SUMMARY</p>
        </div>
    </div>

    <div class="row mb-5 g-5">
        <div class="col-md-1">
            <label>Interpretation:</label>
        </div>
        <div class="col-md-10">
            <p>@Model.dnaReportDetails.REPORT</p>
        </div>
    </div>
    <div class="row mb-5 g-5">
        <div class="col-md-1">
            <label>Basis of Test:</label>
        </div>
        <div class="col-md-10">
            <p>@Model.dnaReportDetails.DIAGNOSIS_REPORT</p>
        </div>
    </div>

    <div class="row mb-5 g-5">
        <a type="button" class="btn btn-success" asp-controller="LabReport" asp-action="LabReports" asp-route-intID=@Model.dnaReport.INTID>Back to Report List</a>
    </div>

</div>
